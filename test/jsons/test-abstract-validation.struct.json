{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/test-abstract-validation",
  "type": "object",
  "properties": {
    "validField": {
      "type": "string",
      "description": "A normal field"
    },
    "invalidField": {
      "$ref": "#/definitions/AbstractBase",
      "description": "This should trigger a warning - direct reference to abstract type"
    }
  },
  "definitions": {
    "AbstractBase": {
      "type": "object",
      "abstract": true,
      "properties": {
        "id": {
          "type": "string"
        }
      },
      "required": ["id"]
    },
    "ConcreteImpl": {
      "type": "object",
      "$extends": "#/definitions/AbstractBase",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "required": ["name"]
    }
  }
}
