{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ComplexArrayUnion",
  "description": "Test case for union with arrays of complex objects (non-discriminated)",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "value": {
            "type": "number"
          },
          "nested": {
            "type": "object",
            "properties": {
              "flag": {
                "type": "boolean"
              },
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "required": ["id"]
      }
    }
  },
  "required": ["name", "items"]
}
