{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/numeric-types",
  "title": "NumericTypes",
  "description": "Test schema for numeric types with precision and scale",
  "type": "object",
  "properties": {
    "int8Field": {
      "type": "integer",
      "minimum": -128,
      "maximum": 127
    },
    "int16Field": {
      "type": "integer",
      "minimum": -32768,
      "maximum": 32767
    },
    "uint32Field": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295
    },
    "uint64Field": {
      "type": "string",
      "pattern": "^[0-9]+$",
      "minimum": 0
    },
    "decimalField": {
      "type": "string",
      "pattern": "^-?[0-9]+(\\.[0-9]+)?$",
      "minimum": 0,
      "maximum": 99999999.99,
      "x-precision": 10,
      "x-scale": 2
    },
    "float32Field": {
      "type": "number",
      "format": "float"
    },
    "float64Field": {
      "type": "number",
      "format": "double"
    }
  },
  "required": [
    "int8Field",
    "decimalField"
  ]
}